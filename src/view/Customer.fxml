<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Customer">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="600.0" prefWidth="850.0" style="-fx-background-color: #352243;">
            <children>
                <ButtonBar layoutX="198.0" layoutY="458.0" prefHeight="48.0" prefWidth="612.0" style="-fx-background-color: #dddddd;">
                    <buttons>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#onActionAddCustomerScreen" text="ADD ">
                            <font>
                                <Font name="System Bold Italic" size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="updateButton" layoutX="510.0" layoutY="25.0" mnemonicParsing="false" onAction="#onActionUpdateCustomerScreen" style="-fx-border-width: 0;" text="UPDATE">
                            <font>
                                <Font name="System Bold Italic" size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="deleteButton" layoutX="510.0" layoutY="25.0" mnemonicParsing="false" onAction="#onActionDelete" style="-fx-background-color: #352243;" text="DELETE" textFill="WHITE">
                            <font>
                                <Font name="System Bold Italic" size="14.0" />
                            </font>
                        </Button>
                    </buttons>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </ButtonBar>
                <VBox layoutY="208.0" prefHeight="391.0" prefWidth="160.0" style="-fx-background-color: #dddddd;">
                    <children>
                        <Button fx:id="appointmentsButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onActionAppointmentsScreen" prefHeight="60.0" prefWidth="160.0" text="APPOINTMENTS" textFill="#545454">
                            <font>
                                <Font name="System Bold Italic" size="16.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="-1.0" />
                            </VBox.margin>
                        </Button>
                  <Button fx:id="customersButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="228.0" style="-fx-background-color: #352243;" text="CUSTOMERS" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="16.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
                  <Button fx:id="reportsButton" mnemonicParsing="false" onAction="#onActionReportsScreen" prefHeight="60.0" prefWidth="160.0" text="REPORTS" textFill="#545454">
                     <font>
                        <Font name="System Bold Italic" size="16.0" />
                     </font>
                  </Button>
                    </children>
                </VBox>
                <VBox layoutY="-4.0" prefHeight="212.0" prefWidth="160.0" style="-fx-background-color: #dddddd;">
                    <children>
                        <Circle radius="45.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0">
                            <fill>
                                <LinearGradient endX="1.0" endY="0.7904761904761904" startX="0.30952380952380953" startY="0.2857142857142857">
                                    <stops>
                                        <Stop>
                                            <color>
                                                <Color red="0.2078431397676468" green="0.13333334028720856" blue="0.26274511218070984" />
                                            </color>
                                        </Stop>
                                        <Stop offset="1.0">
                                            <color>
                                                <Color red="0.8666666746139526" green="0.8666666746139526" blue="0.8666666746139526" />
                                            </color>
                                        </Stop>
                                    </stops>
                                </LinearGradient>
                            </fill>
                            <VBox.margin>
                                <Insets left="36.0" top="60.0" />
                            </VBox.margin>
                        </Circle>
                    </children>
                </VBox>
                <Button fx:id="logoutButton" layoutX="735.0" layoutY="537.0" mnemonicParsing="false" onAction="#onActionLogout" text="LOGOUT">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            <AnchorPane layoutX="198.0" layoutY="98.0" prefHeight="362.0" prefWidth="612.0" style="-fx-background-color: #dddddd;">
               <children>
                  <Line endX="351.0" layoutX="247.0" layoutY="18.0" startX="-234.0" stroke="#616161" strokeLineCap="ROUND" strokeWidth="0.5" />
                      <Label fx:id="headerText" layoutX="234.0" layoutY="4.0" style="-fx-background-color: #dddddd;" text="CUSTOMERS" textFill="#545454">
                          <font>
                              <Font name="System Bold Italic" size="18.0" />
                          </font>
                          <padding>
                              <Insets left="20.0" right="20.0" />
                          </padding>
                      </Label>
                  <TableView fx:id="customerTableView" layoutX="11.0" layoutY="34.0" prefHeight="328.0" prefWidth="590.0">
                     <columns>
                        <TableColumn fx:id="custID_col" prefWidth="43.0" style="-fx-font-size: 10; -fx-font-weight: normal;" text="CUST ID" />
                        <TableColumn fx:id="name_col" prefWidth="61.0" style="-fx-font-size: 10; -fx-font-weight: normal;" text="NAME" />
                        <TableColumn fx:id="address_col" prefWidth="68.0" style="-fx-font-size: 10; -fx-font-weight: normal;" text="ADDRESS" />
                        <TableColumn fx:id="zip_col" prefWidth="44.0" style="-fx-font-size: 10; -fx-font-weight: normal;" text="ZIP" />
                        <TableColumn fx:id="phone_col" prefWidth="51.0" style="-fx-font-size: 10; -fx-font-weight: normal;" text="PHONE" />
                        <TableColumn fx:id="DateCreated_col" prefWidth="79.0" style="-fx-font-size: 10; -fx-font-weight: normal;" text="DATE CREATED" />
                        <TableColumn fx:id="createdBy_col" prefWidth="65.0" style="-fx-font-size: 10; -fx-font-weight: normal;" text="CREATED BY" />
                        <TableColumn fx:id="lastUpdate_col" prefWidth="71.0" style="-fx-font-size: 10; -fx-font-weight: normal;" text="LAST UPDATE" />
                        <TableColumn fx:id="updatedBy_col" prefWidth="68.0" style="-fx-font-size: 10; -fx-font-weight: normal;" text="UPDATED BY" />
                        <TableColumn fx:id="divID_col" prefWidth="39.0" style="-fx-font-size: 10; -fx-font-weight: normal;" text="DIV ID" />
                     </columns>
                  </TableView>
               </children>
            </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</GridPane>
